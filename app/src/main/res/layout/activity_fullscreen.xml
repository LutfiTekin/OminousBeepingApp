<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#020202"
                                                   tools:context=".FullscreenActivity" android:id="@+id/frameLayout3">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content"
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:keepScreenOn="true"
              android:textColor="#83ed4a"
              android:textStyle="bold"
              android:textSize="72sp"
              android:gravity="start|center_vertical"
              android:textAllCaps="true"
              android:text="@string/app_name"
              android:layout_marginBottom="48dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp" android:layout_marginTop="32dp"
              app:layout_constraintTop_toBottomOf="@+id/imageView"
              android:textAppearance="@style/TextAppearance.AppCompat.Medium"
              android:fontFamily="sans-serif"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:autoSizeTextType="uniform"
            android:id="@+id/imageView" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/red_circle"/>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</androidx.constraintlayout.widget.ConstraintLayout>